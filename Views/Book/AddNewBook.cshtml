@model Book; 

@{
    ViewBag.Title = "New Book";
    Layout = "_Layout";
}

<div class="container">
    <h3 class="display-4">Add new book</h3>
    <form method="post" asp-action="AddNewBook">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input type="text" asp-for="Title" class="form-control">
        </div>

        <div class="form-group">
            <label asp-for="Author"></label>
            <input type="text" asp-for="Author" class="form-control">
        </div>
        
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" cols="30" rows="10"></textarea>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Add book" class="btn btn-primary btn-block">
        </div>
    </form>
</div>
